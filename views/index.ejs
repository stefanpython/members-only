<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
    <center>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <% if (user) { %>
              <br>
              <h1>Welcome to <%= title %>, <%= user.firstName %>!</h1>
              <br>
              <a href="/new-message" class="btn btn-info">Create message</a>
              <br>
              <br>

              <% if (messages && messages.length > 0) { %>
                <h2>Messages</h2>
                <div class="message-container">
                  <% for (let message of messages) { %>
                    <div class="card mb-3">
                      <div class="card-body">
                        <h3 class="card-title title">&#x261B; <%= message.title %> &#x261A;</h3>
                        <h4 class="card-text message"> <%= message.content %> &#x270D;</h4>
                     
                        <hr>
                        <p class="card-subtitle mb-2 text-muted">Wrote by: <%= message.author.fullName %></span></p>
                        <p class="card-subtitle mb-2 text-muted">Date: <span><%= message.timestamp.toDateString() %></span></p>

                        <% if (user.isAdmin) { %>
                          <form action="/message/<%= message._id %>/delete" method="GET">
                            <button class="btn btn-danger" type="submit">Delete</button>
                          </form>
                        <% } %>
                      </div>
                    </div>
                  <% } %>
                </div>
              <% } else { %>
                <p>No messages found.</p>
              <% } %>
            <% } else { %>
              <h2>Messages:</h2>
              <% for (let message of messages) { %>
                <div class="card mb-3">
                  <div class="card-body">
                    <h3 class="card-title title">&#x261B; <%= message.title %> &#x261A;</h3>
                    <h4 class="card-text message"> <%= message.content %> &#x270D;</h4>
             
                    <hr>
                    <p class="card-subtitle mb-2 text-muted">Wrote by: <%= message.author.fullName %></span></p>
                    <p class="card-subtitle mb-2 text-muted">Date: <span><%= message.timestamp.toDateString() %></span></p>
                  </div>
                </div>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </center>
    
   

  </body>
</html>
